{{> "layouts/header.hbs" }}
<div class="hero">
  <div class="hero__header">
    <h1 class="hero__title">Conservatoire Henri Dutilleux</h1>
    <h2 class="hero__subtitle">Conservatoire à rayonnement départemental du Grand Belfort</h2>
  </div>
  <div class="hero__chapo">
    <nav class="hero__nav menuTheme">
      <ul class="menuTheme__list">
        <li class="menuTheme__item">
          <a href="#" class="menuTheme__link">
            <svg width="48" height="48" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M24.537 23.806c0 4.864-3.925 8.807-8.769 8.807C10.925 32.613 7 28.67 7 23.807 7 18.942 10.925 15 15.768 15H43.96" stroke="#1C1514" stroke-width="8" stroke-linejoin="round"/>
            </svg>
            Musique
          </a>
        </li>
        <li class="menuTheme__item">
          <a href="#" class="menuTheme__link">
            <svg width="48" height="48" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M23.91 32.818A8.91 8.91 0 1023.908 15a8.91 8.91 0 000 17.818z" stroke="#1C1514" stroke-width="8" stroke-linejoin="round"/>
            </svg>
            Théâtre
          </a>
        </li>
        <li class="menuTheme__item">
          <a href="#" class="menuTheme__link">
            <svg width="48" height="48" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M38.28 22.206v3.012c0 4.248-3.398 7.691-7.588 7.691-4.192 0-7.59-3.443-7.59-7.69v-2.495c0-4.216-3.372-7.633-7.53-7.633-4.16 0-7.532 3.417-7.532 7.633v3.07" stroke="#1C1514" stroke-width="8" stroke-linejoin="round"/>
